<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar.DrawerMenuTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>
    <style name="radioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="buttonTint">#8692f7</item>
        <item name="android:layout_margin">10dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:onClick">radioTapped</item>

    </style>
    <style name="SpinnerTheme" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="background">@drawable/bg_spinner2</item>
    </style>
</resources>