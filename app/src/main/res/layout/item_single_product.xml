<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout_single_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:text="asfagsdgdsgsgsdgasgfafafsdfdfdsf"
            android:maxLength="20"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_id"
            android:layout_below="@+id/tv_product_name"
            android:text="Product ID: "
            android:fontFamily="sans-serif"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_barcode"
            android:layout_toEndOf="@+id/tv_product_id"
            android:text="123456789"
            android:layout_alignBottom="@+id/tv_product_id"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_created_on"
            android:layout_below="@+id/tv_product_id"
            android:text="Created on: "
            android:fontFamily="sans-serif"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date"
            android:layout_toEndOf="@+id/tv_created_on"
            android:text="February 10,2023"
            android:layout_alignBottom="@+id/tv_created_on"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_belongs_to"
            android:layout_below="@+id/tv_created_on"
            android:text="Belongs to: "
            android:fontFamily="sans-serif"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_wh"
            android:layout_toEndOf="@+id/tv_belongs_to"
            android:text="Warehouse"
            android:layout_alignBottom="@+id/tv_belongs_to"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="6 items"
            android:id="@+id/tv_product_qty"
            android:textSize="22sp"
            android:fontFamily="sans-serif-black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/tv_wh"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" DETAIL >"
                android:textSize="16sp"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/background_button_outline"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>